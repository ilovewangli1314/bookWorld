{
  "compilerOptions": {
    "module": "commonjs",
    // "lib": [ "dom", "es5", "es2015.promise" ],
    // "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings",

    ".vscode",
    "build-template"
  ]
}
